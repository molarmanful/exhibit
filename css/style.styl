html, body
  width 100%
  height 100%
  background #000
  margin 0
  overflow hidden
  font-family 'Fira Code', monospace
  color #fff

a
  color #fff

.container
  position absolute
  top 50%
  left 50%
  transform translate(-50%, -50%)

.win
  position fixed
  display none
  width 50vw
  height 80vh
  top 50%
  left 50%
  transform translate(-50%, -50%)
  background-color #000
  overflow auto
  border 1px solid #fff
  box-sizing border-box

  .show
    display inline-block

  .content
    position relative
    padding 5%
    padding-top 2%
    padding-bottom 2%
    img
      width 100%

  .close
    position absolute
    top 1rem
    right 1rem
    cursor pointer
    font-size 2rem

#board
  image-rendering pixelated
